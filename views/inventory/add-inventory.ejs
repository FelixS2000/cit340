<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Inventory Item</title>
    <link rel="stylesheet" href="/css/add-inventory.css">
    <script>
        function validateForm() {
            const make = document.getElementById('make').value;
            const model = document.getElementById('model').value;
            const year = document.getElementById('year').value;
            const price = document.getElementById('price').value;
            const mileage = document.getElementById('mileage').value;
            const description = document.getElementById('description').value;

            if (!make || !model || !year || !price || !mileage || !description) {
                alert('All fields are required.');
                return false;
            }

            // Additional validation for year, price, and mileage
            if (isNaN(year) || isNaN(price) || isNaN(mileage)) {
                alert('Year, price, and mileage must be valid numbers.');
                return false;
            }

            return true;
        }
    </script>
</head>
<body>
    <h1>Add New Inventory Item</h1>
    <% if (flashMessage) { %>
        <div class="flash-message"><%= flashMessage %></div>
    <% } %>
    <form action="/inventory/add-inventory" method="POST" onsubmit="return validateForm()">
        <label for="make">Make:</label>
        <input type="text" name="make" id="make" value="<%= make %>" required>

        <label for="model">Model:</label>
        <input type="text" name="model" id="model" value="<%= model %>" required>

        <label for="year">Year:</label>
        <input type="number" name="year" id="year" value="<%= year %>" required>

        <label for="price">Price:</label>
        <input type="text" name="price" id="price" value="<%= price %>" required>

        <label for="mileage">Mileage:</label>
        <input type="text" name="mileage" id="mileage" value="<%= mileage %>" required>

        <label for="description">Description:</label>
        <textarea name="description" id="description" required></textarea>

        <label for="classification_id">Classification:</label>
        <select name="classification_id" id="classification_id" required>
            <option value="">Select Classification</option>
            <% classifications.forEach(function(classification) { %>
                <option value="<%= classification.classification_id %>" <%= classification.classification_id == classification_id ? 'selected' : '' %>><%= classification.classification_name %></option>
            <% }); %>
        </select>

        <button type="submit">Add Inventory Item</button>
    </form>
    <nav>
        <a href="/inventory/management">Back to Management</a>
    </nav>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory List</title>
</head>
<body>
    <h1>Inventory List</h1>

    <% if (flashMessage && flashMessage.length > 0) { %>
        <div style="color: green;"><%= flashMessage %></div>
    <% } %>

    <% if (errorMessage && errorMessage.length > 0) { %>
        <div style="color: red;"><%= errorMessage %></div>
    <% } %>

    <ul>
        <% inventory.forEach(item => { %>
            <li>
                <h2><%= item.make %> <%= item.model %> (<%= item.year %>)</h2>
                <p>Price: $<%= item.price %></p>
                <p>Mileage: <%= item.mileage %> miles</p>
                <p>Description: <%= item.description %></p>
                <p>Classification: <%= item.classification_name %></p>
                <img src="<%= item.image %>" alt="<%= item.make %> <%= item.model %>">
                <a href="/inventory/classification/<%= item.classification_id %>">View Classification</a>
            </li>
        <% }); %>
    </ul>

    <a href="/inventory/add-inventory">Add New Inventory Item</a>
    <a href="/inventory/add-classification">Add New Classification</a>
</body>
</html>

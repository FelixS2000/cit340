<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <link rel="stylesheet" href="/css/management.css">
</head>
<body>
    <h1>Inventory Management</h1>

    <h3>Manage Inventory</h3>
    <p>Select a classification from the list to see the items belonging to that classification.</p>

    <select id="classificationList">
        <% classifications.forEach(function(classification) { %>
            <option value="<%= classification.classification_id %>"><%= classification.classification_name %></option>
        <% }); %>
    </select>

    <ul>
        <li><a href="/inventory/add-classification">Add New Classification</a></li>
        <li><a href="/inventory/add-inventory">Add New Inventory</a></li>
    </ul>

    <h2>Inventory List</h2>
    <table id="inventoryDisplay"></table>

    
    <% if (typeof flashMessage !== 'undefined') { %>
        <div class="flash-message"><%= flashMessage %></div>
    <% } %>

</body>
</html>
